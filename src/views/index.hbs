<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            <h1>Tareas</h1>
        </div>
        <div class="card-body">
            {{#if contactos}}
            <ul class="list-group">
                {{#each contactos}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                 <!--   {{@key}} -> Esto es para mostrar el id de cada dato   -->
                    {{firstname}} /
                    {{lastname}} /
                    {{email}} /
                    {{phone}}
                    <a href="/delete-contact/{{@key}}" class="btn btn-danger">Delete</a>
                </li>
                {{/each}}
            </ul>
            {{else}}
            <p>No hay contactos aun</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-contact" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Primer nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="lastname" placeholder="Apellidos" class="form-control" >
                </div>
                <div class="form-group">
                    <input type="text" name="email" placeholder="Email" class="form-control" >
                </div>
                <div class="form-group">
                    <input type="text" name="phone" placeholder="Telefono o celular" class="form-control">
                </div>
                <button class="btn btn-primary btn-block">Agregar</button>

            </form>
        </div>
    </div>
</div>